<Window x:Class="BirthdayAsker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BirthdayAsker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DatePicker x:Name="Date_picker"
                        SelectedDateChanged="Date_picker_SelectedDateChanged"
                        FontSize="24" 
                        Foreground="Purple"
                        SelectedDateFormat="Long"
                        Margin="20"
                        />
            <Button x:Name="Btn_calc_age" 
                    Content="Calculate age!" 
                    Height="50" 
                    Width="150"
                    FontSize="20" Click="Btn_calc_age_Click"
                    />
            <TextBlock x:Name="Main_textblock"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        </StackPanel>
            
    </Grid>
</Window>
